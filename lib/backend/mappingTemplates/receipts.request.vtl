#set($username = $ctx.identity.username)

{
    "version" : "2017-02-28",
    "operation" : "Query",
    "index" : "receiptByUsername",
    "query" : {
        "expression": "username = :u",
        "expressionValues" : {
            ":u" : $util.dynamodb.toDynamoDBJson($username),
        }
    },
    "scanIndexForward": false,
}